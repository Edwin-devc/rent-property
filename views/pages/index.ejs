<body>
    <header>
        <nav class="bg-success w-100 text-center">
            <a class="text-decoration-none text-white py-5 fs-4" href="#" class="">Rent Property Management</a>
        </nav>
    </header>
    <main>
        <section class="w-50 m-auto position-relative">
            <div class="container py-4 w-75 m-auto">
                <center>
                    <button class="btn btn-primary w-25 btn-sm" id="log-in">Log In</button>
                    <button class="btn btn-success w-25 btn-sm" id="sign-up">Sign Up</button>
                </center>
            </div>

            <div class="container py-2 w-75 m-auto position-absolute ms-5" id="login-form">
                <form action="/login" method="post" class="ps-3">
                    <div class="my-2">
                        <label for="email" class="form-control-label">Email</label>
                        <input type="email" class="form-control form-control-sm" name="email" required />
                    </div>
                    <div class="my-2">
                        <label for="password" class="form-control-label">Password</label>
                        <input type="password" class="form-control form-control-sm" required />
                    </div>

                    <!-- role -->
                    <div class="my-2 center-text">
                        <center><label for="role" class="fw-bold" style="font-size: 14px;">LOG IN AS</label></center>
                        <select class="form-select form-select-sm" aria-label="select role">
                            <option selected>Client</option>
                            <option value="1">Tenant</option>
                            <option value="2">Landlord</option>
                            <option value="3">Admin</option>
                        </select>
                    </div>
                    <div class="my-2">
                        <input type="submit" class="btn btn-primary btn-sm w-25" value="Log In" />
                    </div>
                </form>
            </div>

            <section>
                <div class="container w-75 mx-auto position-absolute ms-5 d-none" id="signup-form">
                    <form action="/" method="post" class="ps-3">

                        <div class="mt-3">
                            <label for="name" id="icon">First Name</label>
                            <input class="form-control form-control-sm" type="text" name="firstname" placeholder="Enter your first name" required />
                        </div>
                        
                        <div class="mt-3">
                            <label for="name" id="icon">Last Name</i></label>
                            <input class="form-control form-control-sm" type="text" name="lastname" placeholder="Enter your last name" required />
                        </div>

                        <div class="mt-3">
                            <label for="name">Contact</label>
                            <input class="form-control form-control-sm" type="text" name="contact" placeholder="Your telephone number" required />
                        </div>

                        <div class="mt-3">
                            <label for="name" id="icon">Email</label>
                            <input class="form-control form-control-sm" type="email" name="email" placeholder="Email address" required />
                        </div>
                        
                        <div class="mt-3">
                            <label for="name" id="icon">Password</i></label>
                            <input class="form-control form-control-sm" type="password" name="password" placeholder="Password" required />
                        </div>

                        <div class="mt-3">
                            <label for="name" id="icon">Confirm password</label>
                            <input class="form-control form-control-sm" type="password" name="confirm-password" placeholder="Password" required />
                        </div>
                        
                        <div class="gender mt-3">
                            <input type="radio" id="male" name="gender" checked />
                            <label for="male" class="radio">Male</label>
                            <input type="radio" id="female" name="gender" checked />
                            <label for="female" class="radio">Female</label>
                        </div>

                        <!-- role -->
                        <div class="my-2 center-text">
                            <center><label for="role" class="fw-bold" style="font-size: 14px;">Sign Up AS</label></center>
                            <select class="form-select form-select-sm" aria-label="select role">
                                <option selected>Client</option>
                                <option value="2">Landlord</option>
                            </select>
                        </div>

                        <div class="my-3">
                            <p>By clicking sign up,you agree on our <a href="#" class="text-decoration-none">privacy policy</a></p>
                            <input class="btn btn-success btn-sm w-25" type="submit" value="Sign Up">
                        </div>
                    </form>
                </div>
            </section>

        </section>
        
    </main>
