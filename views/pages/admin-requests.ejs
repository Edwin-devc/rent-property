<%- include('../partials/_admin-header'); %>

    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="me-2">
                <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal"
                    data-bs-target="#exampleModal" data-bs-whatever="@mdo"><i class="bi bi-plus"></i> Add Admin</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Generate Report</button>
            </div>
            <!-- <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                            <span data-feather="calendar"></span>
                            This week
                        </button> -->
        </div>
    </div>

    <!-- <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas> -->

    <h4>Requests</h4>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Type</th>
                    <th scope="col">Bathrooms</th>
                    <th scope="col">Bedrooms</th>
                    <th scope="col">Cost</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < requests.length; i++) { %>
                    <tr>
                        <td><%= requests[i].pid %></td>
                        <td><%= requests[i].name %></td>
                        <td><%= requests[i].location %></td>
                        <td><%= requests[i].type %></td>
                        <td><%= requests[i].bathrooms %></td>
                        <td><%= requests[i].bedrooms %></td>
                        <td><%= requests[i].cost %></td>
                        <td>
                            <a href="/admin-view-property/<%= requests[i].pid %>" class="btn btn-sm btn-light"><i class="bi bi-eye"></i><small>View</small></a>
                            <a href="/admin-approve-property/<%= requests[i].pid %>" class="btn btn-sm btn-success"><i class="bi bi-check-lg"> </i><small>Approve</small></a>
                            <a href="/admin-reject-property/<%= requests[i].pid %>" class="btn btn-sm btn-danger"><i class="bi bi-x-circle">
                                </i><small>Reject</small></a>
                        </td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
    </div>

    <%- include('../partials/_admin-footer'); %>